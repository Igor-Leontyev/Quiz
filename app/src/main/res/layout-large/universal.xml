<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Level1"
        android:orientation="vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@drawable/bgm2" android:id="@+id/back_img_lvl1"
            android:contentDescription="@string/todo" android:scaleType="centerCrop"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center" android:id="@+id/cont1"
            android:paddingEnd="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cont2" android:padding="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/line1"
                    android:padding="7dp">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="33sp"
                        android:id="@+id/b_exit"
                        android:text="@string/exit_btn"
                        android:background="@drawable/two_style_btn_black95"
                        android:padding="10dp"
                        android:layout_margin="8dp"/>

                <TextView
                        android:text="@string/LVL_1"
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:id="@+id/t_level" android:layout_weight="1"
                        android:gravity="right"
                        android:padding="10dp"
                        android:textSize="40sp"
                        android:textColor="@color/White_b"
                        android:layout_margin="8dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/line2"
                    android:layout_marginTop="20dp">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point1" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point2" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point3" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point4" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point5" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point6" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point7" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point8" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point9" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point10" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point11" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point12" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point13" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point14" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point15" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point16" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point17" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point18" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point19" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point20" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp" app:srcCompat="@drawable/ask_100dp"
                    android:id="@+id/img_asks" android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/universal_img_style" android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/answer_img"
                    android:id="@+id/img_answer_left" android:layout_weight="1" android:padding="5dp"
                    android:background="@drawable/universal_img_style"
                    android:scaleType="centerCrop" android:layout_marginLeft="10dp" android:layout_marginRight="0dp"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/answer_img"
                    android:id="@+id/img_answer_right" android:layout_weight="1" android:padding="5dp"
                    android:background="@drawable/universal_img_style"
                    android:scaleType="centerCrop" android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>