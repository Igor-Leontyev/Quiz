<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Level1"
        android:orientation="vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:srcCompat="@drawable/bgm2" android:id="@+id/back_img_lvl1"
            android:contentDescription="@string/todo" android:scaleType="centerCrop"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center" android:id="@+id/cont1"
            android:paddingEnd="10dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/cont2" android:padding="10dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/line1" android:padding="7dp">
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/b_exit"
                        android:text="@string/exit_btn"
                        android:background="@drawable/two_style_btn_black95"
                        android:paddingLeft="5dp" android:paddingRight="5dp"
                        android:layout_margin="8dp"/>
                <TextView
                        android:text="@string/levels_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/t_level" android:layout_weight="1"
                        android:gravity="right" android:padding="10dp" android:textSize="24sp"
                        android:textColor="@color/White_b" android:layout_margin="8dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/line2" android:layout_marginTop="10dp">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point1" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point2" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point3" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point4" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point5" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point6" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point7" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point8" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point9" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point10" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point11" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point12" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point13" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point14" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point15" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point16" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point17" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point18" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point19" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/point20" android:layout_weight="1"
                        android:background="@drawable/lvl_btn_two_style"/>



            </LinearLayout>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ask_170dp"
                android:id="@+id/img_asks"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:background="@drawable/answer_img" android:layout_margin="5dp"
                    android:layout_marginLeft="5dp" android:id="@+id/lay_left"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:background="@drawable/answer_img" android:layout_margin="5dp" android:id="@+id/lay_right"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>